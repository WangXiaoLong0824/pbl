<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.dao.ArticleMapper">

    <select id="findArticleCount" parameterType="Article" resultType="java.lang.Long">
        select count(*) from t_article
    </select>

    <select id="findArticlePage" resultType="Article">
        <bind name="key_off" value="(currPage - 1)*pageSize"/>
        select * from t_article limit ${key_off},${pageSize}
    </select>

    <insert id="addArticle" parameterType="Article">
        insert into t_article(article_name,article_author,article_time,article_status,article_content) values(#{articleName},#{articleAuthor},#{articleTime},#{articleStatus},#{articleContent})
    </insert>

    <delete id="deleteArticleById" parameterType="int">
        delete from t_article where article_id = #{articleId}
    </delete>

    <select id="findArticleById" parameterType="int" resultType="Article">
        select * from t_article where article_id = #{articleId}
    </select>

    <update id="updateArticle" parameterType="Article">
        update t_article set article_name=#{articleName},article_author=#{articleAuthor},article_time=#{articleTime},article_status=#{articleStatus},article_content=#{articleContent} where article_id = #{articleId}
    </update>
</mapper>